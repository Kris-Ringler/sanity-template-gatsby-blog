{
  "version": 1,
  "title": "Blog with Gatsby",
  "description": "The de facto blog template for Sanity with Gatsby.",
  "previewMedia": {
    "type": "image",
    "src": "assets/preview-01.jpg",
    "alt": "A screenshot of the Blog with Gatsby application."
  },
  "technologies": [
    {
      "id": "gatsby",
      "name": "Gatsby",
      "url": "https://www.gatsbyjs.org/"
    },
    {
      "id": "netlify",
      "name": "Netlify",
      "url": "https://www.netlify.com/"
    }
  ],
  "deployments": [
    {
      "id": "studio",
      "type": "studio",
      "title": "Content Studio",
      "description": "The Content Studio is where you edit and structure your content.",
      "provider": {
        "name": "netlify",
        "config": {
          "base": "studio",
          "dir": "studio/dist",
          "cmd": "npm run build && cp ./netlify.toml dist"
        },
        "requirements": ["build-hook"]
      },
      "previewMedia": {
        "type": "image",
        "src": "assets/preview-01.jpg",
        "alt": "A preview image of the Content Studio."
      }
    },
    {
      "id": "web",
      "type": "web",
      "title": "Blog Website",
      "description": "A blazing fast blog, made for being easy to customize and update.",
      "requiredTokens": [
        {
          "role": "deploy-studio",
          "label": "GraphQL API Deployer"
        }
      ],
      "provider": {
        "name": "netlify",
        "config": {
          "dir": "web/public",
          "cmd": "npm run build-web"
        },
        "requirements": ["build-hook"]
      },
      "previewMedia": {
        "type": "image",
        "src": "assets/preview-01.jpg",
        "alt": "A preview image of the blog website."
      }
    }
  ]
}
