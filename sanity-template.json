{
  "version": 1,
  "title": "Blog with Gatsby",
  "description": "The de facto blog template for Sanity.",
  "deployments": [
    {
      "id": "studio",
      "type": "studio",
      "title": "Content Studio",
      "dir": "./studio",
      "provider": {
        "name": "netlify",
        "config": {
          "base": "studio",
          "cmd": "npm run build && cp ./netlify.toml dist",
          "dir": "studio/dist"
        }
      }
    },
    {
      "id": "web",
      "type": "web",
      "title": "Frontend",
      "dir": "./web",
      "requiredTokens": [
        {
          "role": "deploy-studio",
          "label": "GraphQL API Deployer"
        }
      ],
      "provider": {
        "name": "netlify",
        "config": {
          "cmd": "npm run build-web",
          "dir": "web/public"
        }
      }
    }
  ],
  "fields": [
    {
      "type": "string",
      "name": "title",
      "title": "Title"
    },
    {
      "type": "string",
      "name": "alias",
      "title": "Alias"
    }
  ]
}
